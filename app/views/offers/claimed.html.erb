<%= button_to "Continue Discovering", discover_path, method: :get, class: "link-out" %>

<div class="discover-container">
  <h3 class="discover-title">Claimed <span class="orange-text">Offers</span></h3>
  <div class="offers-list">
    <% @claimed_offers.each do |offer| %>
      <%= react_component("Offer", 
      props: {
        showActions: false, 
        show: true, 
        offer: offer, 
        tags: offer.tags,
        key: "offer-#{offer.id}",
        suggestionMetrics: {title: offer.title}
      }, 
      prerender: false) %>
    <% end %>
  </div>
  <% if @claimed_offers.length == 0%>
    <p class="no-offers">You haven't claimed any offers yet!</p>
  <% end %>
</div>